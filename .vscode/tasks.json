{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-database-seeder",
            "options": {
                "cwd": "${workspaceFolder}/DatabaseSeeder"
            },
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-backend-csharp",
            "options": {
                "cwd": "${workspaceFolder}/BackendCSharp"
            },
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-frontend-go",
            "options": {
                "cwd": "${workspaceFolder}/FrontendGo",
                "env": {
                    "GOOS": "js",
                    "GOARCH": "wasm"
                }
            },
            "command": "go",
            "type": "shell",
            "args": [
                "build",
                "-o",
                "public/dist/main.wasm",
                "src/main.go"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "build-frontend-tinygo",
            "type": "shell",
            "command": "tinygo",
            "args": [
                "build",
                "-o",
                "public/dist/tiny_main.wasm",
                "-target",
                "wasm",
                "src/main.go"
            ],
            "options": {
                "cwd": "${workspaceFolder}/FrontendGo"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        }
    ]
}
